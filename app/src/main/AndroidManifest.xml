<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="samples.it.source.com.smart_child" >
    <uses-permission android:name="android.permission.VIBRATE"/>

    <supports-screens
    android:smallScreens="false"
    android:largeScreens="true"
    android:normalScreens ="false"
    android:xlargeScreens="false"
    android:anyDensity="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@string/SmartChild" >

        <activity
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:name=".Main"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:name=".Fruct1"
            android:label="@string/title_activity_activity_game1"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:name=".Fruct2"
            android:label="@string/title_activity_activity_game2"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:name=".Fruct3"
            android:label="@string/title_activity_fruct3"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:name=".Fruct4"
            android:label="@string/title_activity_fruct4"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:name=".Fruct5"
            android:label="@string/title_activity_fruct5"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
